class Solution {
public:
    int kthGrammar(int n, int k) {
        if(n==1 && k==1)
            return 0;
        int l=pow(2,n-1);
        int mid=l/2;
            if(k<=mid)
                return kthGrammar(n-1,k);
        else
        {
            int m= kthGrammar(n-1,k-mid);
            if(m==0)
                return 1;
            else
                return 0
        }
    }
};
